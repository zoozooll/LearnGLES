<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.exercises.TransformExer2Activity">

    <android.opengl.GLSurfaceView
        android:id="@+id/surfaceSupportedView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />



    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.example.learngles.SliderBar
                android:id="@+id/sliderbar_translate_x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:title="TranslateX:"
                app:value="0"
                app:min_value="-1.5"
                app:max_value="1.5"

                 />

            <com.example.learngles.SliderBar
                android:id="@+id/sliderbar_translate_y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:title="TranslateY:"
                app:value="0"
                app:min_value="-1.5"
                app:max_value="1.5"
                />

            <com.example.learngles.SliderBar
                android:id="@+id/sliderbar_translate_z"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:title="TranslateZ:"
                app:value="0"
                app:min_value="-1.5"
                app:max_value="1.5"
                />

            <com.example.learngles.SliderBar
                android:id="@+id/sliderbar_rotate_x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:title="RotateX:"
                app:value="0"
                app:min_value="0"
                app:max_value="360"
                />

            <com.example.learngles.SliderBar
                android:id="@+id/sliderbar_rotate_y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:title="RotateY:"
                app:value="0"
                app:min_value="0"
                app:max_value="360"
                />

            <com.example.learngles.SliderBar
                android:id="@+id/sliderbar_rotate_z"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:title="RotateZ:"
                app:value="0"
                app:min_value="0"
                app:max_value="360"
                />

            <com.example.learngles.SliderBar
                android:id="@+id/sliderbar_scale_x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:title="ScaleX:"
                app:value="1"
                app:min_value="0.1"
                app:max_value="2"
                />

            <com.example.learngles.SliderBar
                android:id="@+id/sliderbar_scale_y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:title="ScaleY:"
                app:value="1"
                app:min_value="0.1"
                app:max_value="2"
                />
            <com.example.learngles.SliderBar
                android:id="@+id/sliderbar_scale_z"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:title="ScaleZ:"
                app:value="1"
                app:min_value="0.1"
                app:max_value="2"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>